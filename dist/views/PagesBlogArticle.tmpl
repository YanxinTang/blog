{{define "blog/article"}}
<!DOCTYPE html>
<html lang="en">
  <head>
    {{template "head" .}}
  <link href="/static/css/chunk.11.14bc13d0.css" rel="stylesheet"><link href="/static/css/chunk.6.b8c5c7b6.css" rel="stylesheet"></head>
  <body>
    {{template "header" .}}
    <div class="container">
      <article class="article">
        <div class="article-header">
          <h1 class="article-header__title">{{.article.Title}}</h1>
          <div class="article-header__meta">
            <div class="article-header__category">
              <i class="iconfont icon-tag"></i>
              {{.categoryName}}
            </div>
            <div class="article-header__date">
              <i class="iconfont icon-time"></i>
              {{.article.UpdatedAt|Date}}
            </div>
          </div>
        </div>
        <div class="article-body markdown">
          {{.article.Content|Markdown|Safe}}
        </div>
        <div class="article-footer">
          {{if .login}}
          <div class="button-group article-toolbox">
            <a href="/admin/articles/update/{{.article.ID}}/" class="btn">修改</a>
            <form action="/articles/{{.article.ID}}/" method="post">
              <input type="hidden" name="_method" value="DELETE">
              <button class="btn" type="submit">删除</button>
            </form>
          </div>
          {{end}}
        </div>
      </article>
      <section>
        {{template "messages" .}}
        <div class="comment-form">
          <form class="form" action="/articles/{{.article.ID}}/comment" method="post">
            <div class="form-group">
              <label class="form-group__label" for="usernameInput">昵称：</label>
              <div class="form-group__content">
                {{if .login}}
                <input id="usernameInput" type="text" name="username" value="{{.username}}" readonly>
                {{else}}
                <input id="usernameInput" type="text" name="username">
                {{end}}
              </div>
            </div>
            <div class="form-group">
              <label class="form-group__label" for="contentInput">评论：</label>
              <div class="form-group__content">
                  <textarea name="content" id="contentInput" rows="3"></textarea>
              </div>
            </div>
            <button class="btn submit" type="submit">评论</button>
          </form>
        </div>
        <div class="comment-list">
          {{range $comment := .comments}}
          <div class="comment">
            <div class="comment-header">
              <strong>
                <div class="comment-header__username">
                  {{$comment.Username}}
                </div>
              </strong>
              <div class="comment-header__time">
                {{$comment.CreatedAt|Date}}
              </div>
            </div>
            <div class="comment-body">
              <div class="comment-body__content markdown">
                {{$comment.Content|Markdown|Safe}}
              </div>
            </div>
            {{if $.login}}
            <div class="comment-footer">
              <div class="button-group article-toolbox">
                <form action="/articles/{{$.article.ID}}/comment/{{$comment.ID}}" method="post">
                  <input type="hidden" name="_method" value="DELETE">
                  <button class="btn" type="submit">删除</button>
                </form>
              </div>
            </div>
            {{end}}
          </div>
          {{end}}
        </div>
      </section>
    </div>
    {{template "footer"}}
  <script type="text/javascript" src="/static/js/vendors.0bb138d9.js"></script><script type="text/javascript" src="/static/js/common.5dbcf482.js"></script><script type="text/javascript" src="/static/js/manifest.169ec0c1.js"></script><script type="text/javascript" src="/static/js/pages.2506c690.js"></script><script type="text/javascript" src="/static/js/blog.c5fee13c.js"></script><script type="text/javascript" src="/static/js/article.507d6d8e.js"></script></body>
</html>
{{end}}