{{define "admin/addArticle"}}
<!DOCTYPE html>
<html lang="en">
  <head>
    {{template "head" .}}
  <link href="/static/css/chunk.6.a3d7d593.css" rel="stylesheet"><link href="/static/css/chunk.1.eeabb807.css" rel="stylesheet"></head>
  <body>
    {{template "header" .}}
    {{template "admin/sidebar" .}}
    <div class="main">
      {{template "messages" .}}
      <div class="post-form">
        <form class="form" method="POST" action="/admin/articles/new">
          <div class="form-group">
            <label class="form-group__label" for="usernameInput">标题：</label>
            <div class="form-group__content">
              <input id="usernameInput" type="text" name="title"/>
            </div>
          </div>
          <div class="form-group">
            <label for="categorySelect" class="form-group__label">分类：</label>
            <div class="form-group__content">
              <select id="categorySelect" name="categoryID">
                {{range $category := .categories}}
                <option value="{{$category.ID}}">{{$category.Name}}</option>
                {{end}}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="form-group__label" for="contentInput">内容：</label>
            <div class="form-group__content">
              <textarea name="content" id="contentInput" name="content" rows="20"></textarea>
            </div>
          </div>
          <button class="btn submit" type="submit">发布</button>
        </form>
      </div>
    </div>
  <script type="text/javascript" src="/static/js/manifest.f3ca38b9.js"></script><script type="text/javascript" src="/static/js/pages.9a61ef25.js"></script><script type="text/javascript" src="/static/js/admin.aa69ed45.js"></script></body>
</html>
{{end}}