{{define "admin/editDraft"}}
<!DOCTYPE html>
<html lang="en">
  <head>
    {{template "head" .}}
  <link href="/static/css/chunk.11.14bc13d0.css" rel="stylesheet"><link href="/static/css/chunk.4.c478168d.css" rel="stylesheet"><link href="/static/css/chunk.10.2ec2eec4.css" rel="stylesheet"></head>
  <body>
    {{template "header" .}}
    {{template "admin/sidebar" .}}
    <div class="main">
      {{template "messages" .}}
      <div class="message error hidden"></div>
      <div class="post-form">
        <form class="form" id="editForm" method="POST" action="/admin/draft/publish">
          <input type="hidden" name="_method" value="PUT">
          <div class="form-group">
            <label class="form-group__label" for="titleInput">标题：</label>
            <div class="form-group__content">
              <input id="titleInput" type="text" name="title" value="{{.draft.Title}}"/>
            </div>
          </div>
          <div class="form-group">
            <label for="categorySelect" class="form-group__label">分类：</label>
            <div class="form-group__content">
              <select id="categorySelect" name="categoryID">
                {{range $category := .categories}}
                <option value="{{$category.ID}}" {{if eq $category.ID $.draft.CategoryID}}selected{{end}}>{{$category.Name}}</option>
                {{end}}
              </select>
            </div>
          </div>
        </form>
        <form action="/admin/drafts/{{.draft.ID}}" method="POST" id="deleteForm">
          <input type="hidden" name="_method" value="DELETE">
        </form>
        <div class="form-group">
          <label class="form-group__label" for="contentInput">内容：</label>
          <div class="form-group__content">
            <textarea name="content" id="contentInput" name="content" rows="20">{{ .draft.Content }}</textarea>
          </div>
        </div>
        <div class="button-group">
          <div class="button-group">
            <button class="btn btn-primary submit" type="submit" form="editForm">发布</button>
            <button class="btn btn-success-plain" id="saveDraft" type="button">
              <i class="iconfont icon-loading"></i>
              存草稿
            </button>
            <span id="lastSaveTime"></span>
          </div>
          <button class="btn btn-danger" id="deleteDraft" type="submit" form="deleteForm">删除</button>
        </div>
      </div>
    </div>
    <script>
      var DRAFT_ID = '{{.draft.ID}}';
    </script>
  <script type="text/javascript" src="/static/js/vendors.d895cf57.js"></script><script type="text/javascript" src="/static/js/common.40a95089.js"></script><script type="text/javascript" src="/static/js/manifest.f3ca38b9.js"></script><script type="text/javascript" src="/static/js/pages.0a5f6e7d.js"></script><script type="text/javascript" src="/static/js/admin.9034cff3.js"></script><script type="text/javascript" src="/static/js/editDraft.612f93b6.js"></script></body>
</html>
{{end}}