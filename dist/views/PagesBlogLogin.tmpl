{{define "blog/login"}}
<!DOCTYPE html>
<html lang="en">
  <head>
    {{template "head" .}}
    <style>
      .login-form {
        width: 400px;
        margin: 80px auto;
      }
    </style>
  <link href="/static/css/chunk.6.0e7ab1ea.css" rel="stylesheet"><link href="/static/css/chunk.3.b8c5c7b6.css" rel="stylesheet"></head>
  <body>
    {{template "header" .}}
    <div class="container">
      {{range $errorMsg := .errorMsgs}}
      <div class="message error">{{$errorMsg}}</div>
      {{end}}
      {{range $successMsg := .successMsgs}}
      <div class="message success">{{$successMsg}}</div>
      {{end}}
      <form class="form login-form" action="/login" method="post">
        <div class="form-group">
          <label class="form-group__label" for="usernameInput">昵称：</label>
          <div class="form-group__content">
            <input id="usernameInput" type="text" name="username">
          </div>
        </div>
        <div class="form-group">
          <label class="form-group__label" for="passwordInput">密码：</label>
          <div class="form-group__content">
            <input id="passwordInput" type="password" name="password">
          </div>
        </div>
        <button class="btn submit" type="submit">登录</button>
      </form>
    </div>
  <script type="text/javascript" src="/static/js/manifest.f3ca38b9.js"></script><script type="text/javascript" src="/static/js/pages.9a61ef25.js"></script><script type="text/javascript" src="/static/js/blog.54e8ed4a.js"></script></body>
</html>
{{end}}