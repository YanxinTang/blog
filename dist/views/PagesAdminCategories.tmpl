{{define "admin/categories"}}
<!DOCTYPE html>
<html lang="en">
  <head>
    {{template "head" .}}
  <link href="/static/css/chunk.6.381a4a83.css" rel="stylesheet"><link href="/static/css/chunk.1.eeabb807.css" rel="stylesheet"><link href="/static/css/chunk.4.bc41ce0d.css" rel="stylesheet"></head>
  <body>
    {{template "header" .}}
      {{template "admin/sidebar" .}}
      <div class="main">
      {{template "messages" .}}
      <table class="table">
        <colgroup>
          <col width="70%">
          <col width="30%">
        </colgroup>
        <thead>
          <tr>
            <th>名称</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          {{range $category := .categories}}
          <tr>
            <td>{{$category.Name}}</td>
            <td>
              <button class="btn" disabled>修改</button>
              <form method="POST" action="/admin/categories/{{$category.ID}}">
                <input type="hidden" name="_method" value="DELETE">
                <button class="btn" type="submit">删除</button>
              </form>
            </td>
          </tr>
          {{end}}
          <tr>
            <form method="POST" action="/admin/categories">
              <td>
                <div class="form-group__content">
                  <input type="text" name="name">
                </div>
              </td>
              <td>
                <button class="btn" type="submit">新增</button>
              </td>
            </form>
          </tr>
        </tbody>
      </table>
    </div>
  <script type="text/javascript" src="/static/js/manifest.f3ca38b9.js"></script><script type="text/javascript" src="/static/js/pages.c0bd39a4.js"></script><script type="text/javascript" src="/static/js/admin.aa69ed45.js"></script><script type="text/javascript" src="/static/js/categories.f78b5d04.js"></script></body>
</html>
{{end}}